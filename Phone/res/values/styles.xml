<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="OnscreenActionIcon">
        <item name="android:focusable">false</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">13dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">3dip</item>
    </style>

    <color name="transparent">#00000000</color>

    <style name="Theme.DeleteImageDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="CustomListDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MoreOptionsTextAppearanceFirst">
        <item name="android:textColor">@color/more_option_text_first</item>
        <item name="android:textSize">17.33sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MoreOptionsTextAppearanceSecond">
        <item name="android:textColor">@color/more_option_text_second</item>
        <item name="android:textSize">10.67sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MoreOptionsTextAppearanceTitle">
        <item name="android:textColor">#dce1e8</item>
        <item name="android:textSize">17.33sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MusicListTextAppearanceFirst">
        <item name="android:textColor">@color/more_option_text_second</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MusicListTextAppearanceSecond">
        <item name="android:textColor">@color/more_option_text_first</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="MusicTextAppearanceTitle">
        <item name="android:textColor">#dce1e8</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="MusicButtonTextAppearance">
        <item name="android:textColor">@color/more_option_text_second</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="GestureGuideTipTextAppearance">
        <item name="android:textColor">#e5f2ff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DialogTextAppearanceTitle">
        <item name="android:textColor">#dce1e8</item>
        <item name="android:textSize">17.33sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DialogTextAppearanceContent">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">17.33sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
    </style>

</resources>