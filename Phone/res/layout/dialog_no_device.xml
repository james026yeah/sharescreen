<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_bg"
    android:orientation="vertical" >

    <TextView
        android:layout_width="240dp"
        android:layout_height="28dp"
        android:layout_marginLeft="20dp"
        android:gravity="left|center_vertical"
        android:text="@string/device_config_dlg_no_device"
        android:textAppearance="@style/DialogTextAppearanceTitle" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:gravity="left|center_vertical"
        android:text="@string/device_config_dlg_no_device_detail"
        android:textAppearance="@style/DialogTextAppearanceContent" />

    <TextView
        android:id="@+id/item_ok"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:background="@drawable/more_options_btn_sel"
        android:text="@string/device_config_dlg_ok"
        android:textAppearance="@style/MoreOptionsTextAppearanceFirst" />

</LinearLayout>